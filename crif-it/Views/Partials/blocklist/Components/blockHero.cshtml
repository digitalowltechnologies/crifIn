@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>;
@using ContentModels = Crif.It.Models;
@using Crif.It.Utils;
@{
	ContentModels.BlockHero content = (ContentModels.BlockHero)Model.Content;
	bool isHome = Umbraco.AssignedContentItem.Name == "Home" ? true : false;
}
@switch (content.HeroLayout)
{
	case "Primary":
		<section class="hp-heading">
			<div class="container-lg">
				<div class="row">
					<div class="col-12 banner">
						<div class="img-wrapper">
							<img src="@content.HeroBackground?.Url()" alt="@HtmlUtils.GetImageAlt(content.HeroBackground)">
							<!--<div class="parallax-img" style="background-image: url(@content.HeroBackground?.Url());"></div>-->
						</div>
						<div class="caption">
							@if (isHome && !string.IsNullOrEmpty(content.HeroTitle))
							{
								<h2 class="h1 fade-in-box">@content.HeroTitle</h2>
							}
							else if (!string.IsNullOrEmpty(content.HeroTitle))
							{
								<h1 class="h1- fade-in-box">@content.HeroTitle</h1>
							}
							<a title="@content.HeroCta?.Name" href="@content.HeroCta?.Url" target="@content.HeroCta?.Target" class="more fade-in-box" data-link-type="cta" data-link="@content.HeroCta?.Name" data-link-destination="@content.HeroCta?.Url" data-link-section="@content.HeroTitle">@content.HeroCta?.Name</a>
						</div>
					</div>
				</div>
			</div>
		</section>
		break;
	case "Secondary":
		<section class="internal-heading pb-lg-3">
			<div class="container-lg">
				<div class="row">
					<div class="col-12 banner">
						<div class="img-wrapper">
							<img src="@content.HeroBackground?.Url()" alt="@HtmlUtils.GetImageAlt(content.HeroBackground)">
							<!--<div class="parallax-img" style="background-image: url(@content.HeroBackground?.Url());"></div>-->
						</div>
						<div class="caption">
							@await (Html.PartialAsync("Breadcrumb", Umbraco.AssignedContentItem))
							@if (isHome && !string.IsNullOrEmpty(content.HeroTitle))
							{
								<h2 class="h1 fade-in-box">@content.HeroTitle</h2>
							}
							else if (!string.IsNullOrEmpty(content.HeroTitle))
							{
								<h1 class="h1 fade-in-box">@content.HeroTitle</h1>
							}
							<p class="big-text fade-in-box">@HtmlUtils.TextCut(content.HeroDescription,200)</p>
						</div>
					</div>
				</div>
			</div>
		</section>
		break;
	case "Tertiary":
		<section class="textonly-heading pb-lg-3">
			<div class="container-lg">
				<div class="row">
					<div class="col-12 banner">
						<div class="caption">
							@await (Html.PartialAsync("Breadcrumb", Umbraco.AssignedContentItem))
							@if (isHome && !string.IsNullOrEmpty(content.HeroTitle))
							{
								<h2 class="h1 fade-in.box">@content.HeroTitle</h2>
							}
							else if (!string.IsNullOrEmpty(content.HeroTitle))
							{
								<h1 class="h1 fade-in-box">@content.HeroTitle</h1>
							}
							@if(!content.HeroDescription.IsNullOrWhiteSpace()){
								<p class="big-text fade-in-box">@content.HeroDescription</p>
							}
						</div>
					</div>
				</div>
			</div>
		</section>
		break;
	case "Solution":
		<section class="internal-heading-photo pb-lg-3">
			<div class="container-lg">
				<div class="row">
					<div class="col-12">
						<div class="banner">
							<div class="img-wrapper">
								<img src="@content.HeroBackground?.Url()" alt="@HtmlUtils.GetImageAlt(content.HeroBackground)">
							</div>
							<div class="caption">
								@await (Html.PartialAsync("Breadcrumb", Umbraco.AssignedContentItem))
								@if (isHome && !string.IsNullOrEmpty(content.HeroTitle))
								{
									<h2 class="h1">@content.HeroTitle</h2>
								}
								else if (!string.IsNullOrEmpty(content.HeroTitle))
								{
									<h1 class="h1">@content.HeroTitle</h1>
								}
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>
		break;
	case "Consumatori":
		<section class="consumer-heading">
			<div class="container-lg">
				<div class="row">
					<div class="col-12 banner">
						<div class="img-wrapper">
							<img src="@content.HeroBackground?.Url()" alt="@HtmlUtils.GetImageAlt(content.HeroBackground)">
						</div>
						<div class="caption">
							@if (isHome && !string.IsNullOrEmpty(content.HeroTitle))
							{
								<h2 class="h1">@content.HeroTitle</h2>
							}
							else if (!string.IsNullOrEmpty(content.HeroTitle))
							{
								<h1 class="h1">@content.HeroTitle</h1>
							}
							@if (content.HeroDescription != null)
							{
								<p class="big-text">@HtmlUtils.TextCut(content.HeroDescription,200)</p>
							}
							@if (content.HeroCtas != null)
							{
								<div class="cta">
									@foreach (var cta in content.HeroCtas)
									{
										if (cta.Url != null)
										{
											<a title="@cta?.Name" href="@cta?.Url" target="@cta?.Target" class="d-flex justify-content-center btn btn-primary btn-large" data-link-type="cta" data-link="@cta?.Name" data-link-destination="@cta?.Url" data-link-section="@content.HeroTitle"><span>@cta?.Name</span></a>
										}
									}

								</div>
							}
						</div>
					</div>
				</div>
			</div>
		</section>
		break;
	case "Sherlock":
		<section class="lightGreyBg2 pageSection">
			<div class="container">
				<div class="row">
					<div class="col-12 col-md-5 col-lg-4">
						@if (isHome && !string.IsNullOrEmpty(content.HeroTitle))
						{
							<h2 class="title ms-0">@content.HeroTitle</h2>
						}
						else if (!string.IsNullOrEmpty(content.HeroTitle))
						{
							<h2 class="title ms-0">@content.HeroTitle</h2>
						}
						@if (content.HeroDescription != null)
						{
							<p class="">@HtmlUtils.TextCut(content.HeroDescription, 200)</p>
						}
						@if (content.HeroCtas != null)
						{
								@foreach (var cta in content.HeroCtas)
								{
									@if (cta.Url != null)
									{
										<a title="@cta?.Name" href="@cta?.Url" target="@cta?.Target" class="orangeBtn mt-4" data-link-type="cta" data-link="@cta?.Name" data-link-destination="@cta?.Url" data-link-section="@content.HeroTitle">@cta?.Name</a>
									}
								}

						}
					</div>
					<div class="col-12 col-md-7 col-lg-8">
						<img src="@content.HeroBackground?.Url()" alt="@HtmlUtils.GetImageAlt(content.HeroBackground)" class="fitImg ms-md-4 ms-lg-5 animateThis slideLeft d-none d-md-block" />
						@* <img src="images/app-fraud-detect.png" alt=""
							 class="fitImg ms-md-4 ms-lg-5 animateThis slideLeft d-none d-md-block" />
						<img src="images/app-fraud-detect-mob.png" alt="" class="fitImg mt-4 py-3 d-block d-md-none" /> *@
					</div>
				</div>
			</div>
		</section>
		
		break;
	default:
		break;

}